<strong>Name: </strong><%= @attraction.name %>
<strong>Total Number of Users: </strong><%= @attraction.users.size %>
<strong>Ticket Requirement: </strong><%= @attraction.tickets %>
<strong>Height Requirement: </strong><%= @attraction.min_height %>
<strong>Nausea Rating: </strong><%= @attraction.nausea_rating %>
<strong>Happiness Rating: </strong><%= @attraction.happiness_rating %>
<% if session[:admin] then %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction.id) %>
<% else %> 
  <%= button_to "Go on this ride", go_on_ride_path, params: {attraction_id: @attraction.id, attraction_name: @attraction.name}, method: :post %>
<% end %>